<Page x:Class="CT_MKWII_WPF.Views.Pages.ModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:components="clr-namespace:CT_MKWII_WPF.Views.Components"
      xmlns:local="clr-namespace:CT_MKWII_WPF"
      mc:Ignorable="d"
      d:DesignHeight="831" d:DesignWidth="444"
      Title="Mods" Background="Transparent">

    <Page.Resources>
        <!-- Define a CollectionViewSource with inline data -->
        <CollectionViewSource x:Key="ModsCollection">
            <CollectionViewSource.Source>
                <x:Array Type="{x:Type local:ModItem}">
                    <local:ModItem ModName="Sample Mod 1, Just so you know this mod name is way to long but that is for the test" IsEnabled="True"/>
                    <local:ModItem ModName="Sample Mod 2" IsEnabled="False"/>
                    <local:ModItem ModName="Sample Mod 3" IsEnabled="True"/>
                </x:Array>
            </CollectionViewSource.Source>
        </CollectionViewSource>
    </Page.Resources>
    
    
    <Grid>
        <components:DraggableListView x:Name="ModsListView" 
                                      ItemsSource="{Binding Source={StaticResource ModsCollection}}">
            <components:DraggableListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Button 1" Click="MenuItem_OnClick"/>
                    <MenuItem Header="Button 2"/>
                    <Separator />
                    <MenuItem Header="Button 100"/>
                </ContextMenu>
            </components:DraggableListView.ContextMenu>
            
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Enabled" Width="75">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                          Style="{StaticResource SwitchDark}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Margin="0,5" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Mod Name" DisplayMemberBinding="{Binding ModName}" />
                </GridView>
            </ListView.View>
        </components:DraggableListView>
    </Grid>
</Page>
