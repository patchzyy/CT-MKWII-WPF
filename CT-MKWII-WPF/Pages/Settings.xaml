<UserControl x:Class="CT_MKWII_WPF.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dolphin Emulator Path:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="DolphinPathTextBox" Grid.Row="0" Margin="0,0,90,0"/>
        <Button Content="Browse..." Grid.Row="0" HorizontalAlignment="Right" Width="75" Click="BrowseDolphinButton_Click"/>

        <TextBlock Text="Mario Kart Wii Game File:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox x:Name="GamePathTextBox" Grid.Row="1" Margin="0,10,90,0"/>
        <Button Content="Browse..." Grid.Row="1" HorizontalAlignment="Right" Width="75" Margin="0,10,0,0" Click="BrowseGameButton_Click"/>

        <Button Content="Save Settings" Grid.Row="3" HorizontalAlignment="Right" Width="100" Click="SaveButton_Click" Margin="0,20,0,0"/>
    </Grid>
</UserControl>